#!/bin/sh

# produces a system summary

RCol='\033[0m'; BGre='\033[1;32m'; Green='\033[0;32m'; Red='\033[0;31m'; Yellow='\033[0;33m'

min() {
    [ "$1" -gt "$2" ] && echo "$2" || echo "$1"
}

usage() {
    n=$((20 * $1 / 100)); i="$n"
    printf "["
    if [ $i -gt 0 ]; then
        printf "%b%0$(min $i 10)s%b" "$Green" " " "$RCol" | tr " " "="
        i=$(( i - 10 ))
    fi
    if [ $i -gt 0 ]; then
        printf "%b%0$(min $i 5)s%b" "$Yellow" " " "$RCol" | tr " " "="
        i=$(( i - 5 ))
    fi
    [ $i -gt 0 ] && printf "%b%0${i}s%b" "$Red" " " "$RCol" | tr " " "="
    printf "%0$(( 20 - n ))s]" | tr " " "-"
}

echo

(
    printf "\\n"
    printf " %bMachine%b,%s\\n" "$BGre" "$RCol" "$(cat /proc/sys/kernel/hostname)"
    printf " %bSystem%b,%s\\n" "$BGre" "$RCol" "$(grep "PRETTY_NAME" /etc/os-release | cut -d'"' -f2)"
    printf " %bArchitecture%b,%s\\n" "$BGre" "$RCol" "$(uname -m)"
    printf " %bKernel%b,%s\\n" "$BGre" "$RCol" "$(uname -r)"
    printf " %bCPU%b,%s\\n" "$BGre" "$RCol" "$(grep -m1 "model name" /proc/cpuinfo | awk -F": " '{print $2}' | tr -s " ")"
    printf " %bMemory%b,%s\\n" "$BGre" "$RCol" "$(free -h --si | head -n2 | tail -n1 | awk '{print $2}')"
    printf " %bShell%b,%s\\n" "$BGre" "$RCol" "$SHELL"
    printf " %bTerminal%b,%s\\n" "$BGre" "$RCol" "$TERM"
    printf " %bIP%b,%s\\n" "$BGre" "$RCol" "$(awk '/32 host/ { print f } {f=$2}' < /proc/net/fib_trie | tail -n1)"
    printf " %bGeometry%b,%sx%s\\n" "$BGre" "$RCol" "$(tput cols)" "$(tput lines)"
) | column -t -s ','

echo

(
    printf " %bFilesystem,Size,Used%b\\n" "$BGre" "$RCol"
    for i in $(df -h | sort | grep -E "/(sd|nvme|drbd|mapper|root)" | cut -d' ' -f1); do
        id=$(echo "$i" | rev | cut -d"/" -f1 | rev)
        p=$(df | grep "$i" | tr -s " " | cut -d' ' -f5 | tr -d "%")
        s=$(df -h | grep "$i" | tr -s " " | cut -d" " -f2)
        printf " %s,%s,%s\\n" "$id" "$s" "$(usage "$p")"
    done
) | column -t -s ','
